%article.post
  %header
    %h1= title
    %span.date= date
  %section.content= find_and_preserve(body)
  .shr-bookmarks.shr-bookmarks-expand.shr-bookmarks-center.shr-bookmarks-bg-enjoy
    %ul.socials
      %li.shr-twittley
        %a.external{:href => "http://twittley.com/submit/", :rel => "nofollow", :title => "Submit this to Twittley"} Submit this to Twittley
      %li.shr-digg
        %a.external{:href => "http://digg.com/submit", :rel => "nofollow", :title => "Digg this!"} Digg this!
      %li.shr-twitter
        %a.external{:href => "http://twitter.com/home", :rel => "nofollow", :title => "Tweet This!"} Tweet This!
      %li.shr-scriptstyle
        %a.external{:href => "http://scriptandstyle.com/submit", :rel => "nofollow", :title => "Submit this to Script & Style"} Submit this to Script & Style
      %li.shr-reddit
        %a.external{:href => "http://reddit.com/submit", :rel => "nofollow", :title => "Share this on Reddit"} Share this on Reddit
      %li.shr-delicious
        %a.external{:href => "http://del.icio.us/post", :rel => "nofollow", :title => "Share this on del.icio.us"} Share this on del.icio.us
      %li.shr-stumbleupon
        %a.external{:href => "http://www.stumbleupon.com/submit", :rel => "nofollow", :title => "Stumble upon something good? Share it on StumbleUpon"} Stumble upon something good? Share it on StumbleUpon
      %li.shr-technorati
        %a.external{:href => "http://technorati.com/faves", :rel => "nofollow", :title => "Share this on Technorati"} Share this on Technorati
      %li.shr-facebook
        %a.external{:href => "http://www.facebook.com/share.php", :rel => "nofollow", :title => "Share this on Facebook"} Share this on Facebook
  %section.comments
    - if @config[:disqus]
      #disqus_thread
      %script{:src => "http://disqus.com/forums/#{@config[:disqus]}/embed.js", :type => "text/javascript"}       
      %noscript
        %a{:href => "http://#{@config[:disqus]}.disqus.com/?url=ref"} View the discussion thread.